<div class = "main_top">
  <div class = "room_title">
    LiSAっ子グループ
  </div>
  <a class = "chat_finish" href = "#">
    チャットを終了する
  </a>
</div>
<div class = "main_field">
  <ul class = "message_list">
    <li>
      <div>
        <span class = "chat_user_name">masa</span>
        <span class = "chat_post_time">2020/12/12(Sun) 15:00</span>
      </div>
      <div class = "chat_post_message">
        おはよう
      </div>
    </li>
    <li>
      <div>
        <span class = "chat_user_name">momoko</span>
        <span class = "chat_post_time">2020/12/12(Sun) 15:30</span>
      </div>
      <div class = "chat_post_message">
        おはよう
      </div>
    </li>
  </ul>
</div>
<%= form_with model: [@room, @message], class: 'main_bottom', local: true do |f| %>
  <div class="post_form">
    <div class="post_box">
      <%= f.text_field :content, class: 'message_writer', placeholder: 'type a message' %>
      <label class="form_image">
        <span class="image_file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
  </div>
  <%= f.submit '送信', class: 'send_button' %>
<% end %>